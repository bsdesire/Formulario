
@{
    Layout = null;
}

<!DOCTYPE html>
<meta charset="utf-8" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formulário</title>
</head>
<body>
    <div>
        <h2>Formulário</h2>
        <!-- Esta é uma linha de comentário em HTML -->
        @* este é outro comentário que NÃO é visível no cliente *@

        @* Tarefas a serem executadas pelo FORMULÁRIO
            - Nome
            - Idade
            e depois mostrar esses dados no browser
        *@

        <form method="post">
            Qual o seu nome:
            <input type="text" name="nome" required="required"/><br />
            Qual a sua idade:
            <input type="number" name="idade" required="required" min="0" max="130"/><br />
            <button type="submit">Enviar Formulário</button>
            <input type="submit" value="Enviar Formulário" />
        </form>

        @if (ViewBag.mensagem != "")
        {
            <text>
                <script>
            alert("@ViewBag.mensagem");
                </script>
            </text>
        }
    </div>
</body>
</html>
